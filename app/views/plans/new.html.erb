<div class="container">
 <%= form_with(model: @plan, local: true) do |form| %>
  <div class="housework_item">
    <%= form.label :家事 %>
    <%= form.collection_select :housework_id, Housework.all, :id, :title %>
  </div>

  <div class="time">
    <%= form.label :日付 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>
 <% end %>
</div>
